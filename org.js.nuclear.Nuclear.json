{
    "app-id": "org.js.nuclear.Nuclear",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "19.08",
    "branch": "stable",
    "sdk": "org.freedesktop.Sdk",
    "separate-locales": false,
    "command": "run.sh",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--filesystem=host",
	"--socket=pulseaudio"
    ],
    "build-options" : {
        "env": {
            "NPM_CONFIG_LOGLEVEL": "info"
        }
    },
    "modules": [
        {
            "name": "nuclear",
            "buildsystem": "simple",
            "sources": [
               {
                   "type": "file",
                   "url": "https://github.com/nukeop/nuclear/releases/download/v0.6.3/nuclear-fca030.tar.gz",
                   "sha256": "5b90a1064736c158f62ea74c5814dffdd25f8b6a3877dfeed065377e744cdd2e",
                   "dest-filename":"nuclear-fca030.tar.gz"
                },
                {
                    "type":"file",
                    "path": "org.js.nuclear.Nuclear.metainfo.xml"
                },
                {
                  "type":"file",
                  "path": "org.js.nuclear.Nuclear.desktop"
                },
                {
                    "type":"file",
                    "path":"org.js.nuclear.Nuclear.png"
                },
                {
                    "type":"file",
                    "url":"https://raw.githubusercontent.com/advaithm/flathub/nuclear/build_for_arch.py",
                    "sha256":"cb26f246555185747083ad46e495d7206b843fa7f432d152bd593e711dd77227",
                    "dest-filename":"build_for_arch.py"
                },
                {
                    "type": "script",
                    "dest-filename": "run.sh",
                    "commands": [ "/app/main/nuclear" ]
                }

            ],
        "build-commands": [
                "python3 build_for_arch.py",
		        "mkdir -p /app/share/icons/hicolor/512x512/apps/",
                "install  org.js.nuclear.Nuclear.png /app/share/icons/hicolor/512x512/apps/",
                "install org.js.nuclear.Nuclear.metainfo.xml /app/share/metainfo/",
                "install org.js.nuclear.Nuclear.desktop /app/share/applications/",
                "install run.sh /app/bin/"
            ]
        }
    ]
}
